{
  "name": "Node.js & Docker",
  "build": {
    "dockerfile": "Dockerfile",
    "args": { "VARIANT": "20-bullseye" }
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "ms-azuretools.vscode-docker",
        "esbenp.prettier-vscode"
      ]
    }
  },
  "forwardPorts": [3000],
  "runArgs": ["--init"],
  "mounts": [
    "source=${localWorkspaceFolder}/container_data,target=/workspaces/contenedores/container_data,type=bind,consistency=cached"
  ],
  "postCreateCommand": "chmod +x *.sh 2>/dev/null || true && sudo apt-get update && sudo apt-get install -y tmux unzip wget curl",
  "postStartCommand": "bash inicio.sh",
  "remoteUser": "node"
}
